@model NotesMarketPlace.Models.Users
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<!-- SignUp Page-->
    <section id="login">
        <div id="signup-page" class="container">

            <!-- LOGO -->
            <div class="row justify-content-center">
                <div id="signuplogo" class="text-center col-md-6 col-12 col-sm-12">

                    <img src="~/Content/Front/img/pre-login/top-logo.png" class="img-fluid" alt="Login">
                </div>
            </div>



            <div class="row justify-content-center">

                <div class="col-12 col-md-12 col-sm-11 col-lg-9 col-xl-8">


                    <div id="signup-form">

                        <!-- Head Section -->
                        <div id="signup-head" class="text-center">
                            <h2>Create an Account</h2>
                            <p>Enter your details to signup</p>
                        </div>

                        @if (TempData["Success"] != null)
                        {
                            <div class="text-center text2">
                                <p><span><i class="fa fa-check-circle"></i> Your account has been successfully created.</span></p>
                            </div>
                        }
                        <!-- Form -->


                        @using (Html.BeginForm("SignUp", "SignUp", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label class="label" for="exampleInputEmail1">First Name *</label>

                                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control exampleInputEmail1", @placeholder = "Enter your first name" })
                                @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "form-error label" })
                            </div>

                            <!-- Last Name -->
                            <div class="form-group">
                                <label class="label" for="exampleInputEmail1">Last Name *</label>


                                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control exampleInputEmail1", @placeholder = "Enter your last name" })
                                @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "form-error label" })
                            </div>

                            <!-- Email -->
                            <div class="form-group">
                                <label class="label" for="exampleInputEmail1">Email *</label>


                                @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control exampleInputEmail1", @placeholder = "Enter your email address" })
                                @Html.ValidationMessageFor(x => x.EmailID, "", new { @class = "form-error label" })
                            </div>

                            <!-- Password-->
                            <div class="form-group">
                                <label class="label exampleInputPassword1">Password</label>

                                <!-- Icon -->
                                <div class="hidepassword">


                                    @Html.PasswordFor(x => x.Password, new { @class = "form-control exampleInputEmail1 exampleInputPassword1", @id = "signup-pass-new-1", @placeholder = "Enter your password" })

                                    <span toggle="#signup-pass-new-1" class="fa fa-fw fa-eye field-icon toggle-password"></span>

                                </div>@Html.ValidationMessageFor(x => x.Password, "", new { @class = "form-error label" })
                            </div>

                            <!-- Confirm Password-->
                            <div class="form-group">
                                <label class="label exampleInputPassword1">Confirm Password</label>
                                <!-- Icon -->
                                <div class="hidepassword">
                                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control exampleInputEmail1 exampleInputPassword1", @id = "signup-pass-new-2", @placeholder = "enter your password" })
                                    <span toggle="#signup-pass-new-2" class="fa fa-fw fa-eye field-icon toggle-password"></span>

                                </div> @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "form-error label" })
                            </div>

                            <!-- LOGIN Button -->
                            <button type="submit" class="btn text-center" id="btn"><b>SIGN UP</b></button>
                        }
                        <p class="text-center text">Already have an account? <a href="@Url.Action("Login","SignUp")"><span>Login</span></a></p>

                    </div>
                </div>
            </div>
        </div>
    </section>
   