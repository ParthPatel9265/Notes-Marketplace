@model NotesMarketPlace.Models.ForgotPassword
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

 <section id="login">
        <div id="forgotpassword" class="container">


            <div class="row justify-content-center">
                <div id="logo" class="text-center">
                    <img src="~/Content/Front/img/pre-login/top-logo.png" class="img-fluid" alt="Login">
                </div>
            </div>

            <div class="row justify-content-center">

                <div class="col-xl-8 col-12 col-md-12 col-sm-11 col-lg-9 ">
                    <div id="forgotpassword-form">

                        <!-- Heading -->
                        <div id="forgotpassword-head" class="text-center">
                            <h2>Forgot Password?</h2>
                            <p>Enter your email to reset your password</p>

                        </div>
                        @if (TempData["Success"] != null)
                        {
                            <div class="text-center text2">
                                <p><span><i class="fa fa-check-circle"></i>@TempData["Success"]</span></p>
                            </div>
                        }

                        <!-- Form -->

                        @using (Html.BeginForm("ForgotPassword", "SignUp", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <!-- Email -->
                            <div class="form-group">
                                <label class="label" for="exampleInputEmail1">Email</label>

                                @Html.ValidationMessageFor(x => x.EmailID, "", new { @class = "form-error" })
                                @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control ", @id = " exampleInputEmail1", @placeholder = "Enter your email address" })
                            </div>

                            <!--Button -->
                            <button type="submit" class="btn text-center" id="btn"><b>SUBMIT</b></button>
                        }

                    </div>
                </div>
            </div>
        </div>
  </section>
   