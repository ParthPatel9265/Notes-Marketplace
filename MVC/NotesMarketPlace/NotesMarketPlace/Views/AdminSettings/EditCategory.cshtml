@model NotesMarketPlace.Models.AddCategory
@{
    ViewBag.Title = "Add Category";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<!-- Add Catagory -->
@using (Html.BeginForm("AddCategory", "AdminSettings", FormMethod.Post, new { @class = "user-details-form" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.ID)

    <section id="personal-details" class="user-profile content-box-md">
        <div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="heading">
                            <h3>Add Category</h3>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="row">

                            <div class="col-md-6 col-sm-6">
                                <!-- Catagory Name -->
                                <div class="form-group">
                                    <label class="label">Category Name*</label>

                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control exampleInputEmail1", id = "category-name", placeholder = "Enter category name", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "form-error" })

                                </div>

                            </div>
                        </div>
                        <!-- Description -->
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <div class="textarea-input">
                                        <label class="label" for="exampleInputEmail1">Description *</label>
                                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control exampleInputEmail1", id = "description", placeholder = "Enter your description", required = "required" })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "form-error" })
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-2 col-sm-3">
                                <button type="submit" class="btn text-uppercase text-center" id="btn"><b>submit</b></button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </section>
}
<!-- Add Catagory End -->
