@using PagedList;
@using PagedList.Mvc;

@model NotesMarketPlace.Models.Dashboard

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@*Dashboard Start*@
<section id="dashboard">

    <div class="container">


        <div class="row dashboard-title">


            <div class="col-md-6 col-sm-12 col-12">
                <div class="dashboard-heading">
                    <h2>Dashboard</h2>
                </div>
            </div>

            @*button*@
            <div class="col-md-6 col-sm-12 col-12 text-right add-note-btn">


                <button type="button" id="btn" class="btn text-uppercase text-center" onclick="location.href='@Url.Action("AddNotes","SellNotes")'"><b>Add Notes</b></button>

            </div>

        </div>


        <div class="dashboard-content">


            <div class="row">


                <div class="col-lg-6 col-md-12 col-sm-12 col-12 bothpadding">

                    <div class="row myearning">

                        <div class="col-lg-4 col-md-4 col-sm-4 col-12">

                            <img src="~/Content/Front/img/Dashboard/earning-icon.svg" alt="earning">
                            <h5>My Earning</h5>

                        </div>


                        <div class="col-lg-8 col-md-8 col-sm-8 col-12">

                            <div class="row">


                                <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                    <div class="left-dashboard text-center">
                                        <a href="@Url.Action("MySoldNotes", "MySoldNotes")"><h4><b>@Model.NumberOfSoldNotes</b></h4></a>
                                        <a href="@Url.Action("MySoldNotes", "MySoldNotes")"><p>Number Of Sold Notes</p></a>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                                    <div class="left-dashboard text-center">
                                        @if (@Model.MoneyEarned == null)
                                        {
                                            <a href="@Url.Action("MySoldNotes", "MySoldNotes")"><h4><b>&#36;0</b></h4></a>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("MySoldNotes", "MySoldNotes")"><h4><b>&#36;@Model.MoneyEarned</b></h4></a>
                                        }
                                        <a href="@Url.Action("MySoldNotes", "MySoldNotes")"><p>Money Earned</p></a>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12 col-sm-12 col-12">
                    <div class="row stats-of-notes">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-12">
                            <div>

                                @*notes sell*@
                                <div class="right-dashboard text-center">
                                    <a href="@Url.Action("MyDownloads","MyDownloads")"><h4><b>@Model.MyDownloads</b></h4></a>
                                    <a href="@Url.Action("MyDownloads","MyDownloads")"><p>My Downloads</p></a>
                                </div>

                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-12">

                            @*notes sell*@
                            <div class="right-dashboard text-center">
                                <a href="@Url.Action("MyRejectedNotes","MyRejectedNotes")"><h4><b>@Model.MyRejectedNotes </b></h4></a>
                                <a href="@Url.Action("MyRejectedNotes","MyRejectedNotes")"><p>My Rejected Notes</p></a>
                            </div>

                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-12">

                            @*notes sell*@
                            <div class="right-dashboard text-center">
                                <a href="@Url.Action("BuyerRequest","BuyerRequest")"><h4><b>@Model.BuyerRequest</b></h4></a>
                                <a href="@Url.Action("BuyerRequest","BuyerRequest")"><p>Buyer Requests</p></a>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

</section>
@*Dashboard Ends *@
@*Dashboard Progress*@
<section id="progress-notes">
    <div class="container">
        @using (Html.BeginForm("Dashboard", "SellNotes", FormMethod.Get))
        {
            <div class="row">
                <div class="col-12 col-sm-12 col-md-4 col-lg-6">
                    <h3>In Progress Notes</h3>
                </div>
                <div class="col-12 col-sm-12 col-md-8 col-lg-6">
                    <div class="row justify-content-end">
                        <div class="hidepassword">
                            <img src="~/Content/Front/img/Dashboard/search.jpg" class="searchimage doup">
                            <input type="search" name="search1" value="@ViewBag.Search1" class="form-control search-bar exampleInputEmail1" placeholder="Search">
                        </div>
                        <div class="btn-merge">
                            <button type="submit" class="btn text-uppercase text-center" id="btn"><b>Search</b></button>
                        </div>
                    </div>
                </div>
            </div>

        }
        <div class="row">
            <div class="col-md-12">
                <div class="grid-table table-responsive-xl">
                    <table class="table">
                        <thead>

                            <tr>
                                <th scope="col" class="align-middle">@Html.ActionLink("ADDED DATE", "Dashboard", new { sort1 = ViewBag.Sort1 == null ? "CreatedDate_Asc" : (ViewBag.Sort1 == "CreatedDate_Desc" ? "CreatedDate_Asc" : "CreatedDate_Desc"), sort2 = @ViewBag.Sort2, search1 = @ViewBag.Search1, search2 = @ViewBag.Search2 })</th>
                                <th scope="col" class="align-middle">@Html.ActionLink("TITLE", "Dashboard", new { sort1 = ViewBag.Sort1 == null ? "Title_Asc" : (ViewBag.Sort1 == "Title_Asc" ? "Title_Desc" : "Title_Asc"), sort2 = @ViewBag.Sort2,  search1 = @ViewBag.Search1, search2 = @ViewBag.Search2 })</th>
                                <th scope="col" class="align-middle">@Html.ActionLink("CATEGORY", "Dashboard", new { sort1 = ViewBag.Sort1 == null ? "Category_Asc" : (ViewBag.Sort1 == "Category_Asc" ? "Category_Desc" : "Category_Asc"), sort2 = @ViewBag.Sort2, search1 = @ViewBag.Search1, search2 = @ViewBag.Search2 })</th>
                                <th scope="col" class="align-middle">@Html.ActionLink("STATUS", "Dashboard", new { sort1 = ViewBag.Sort1 == null ? "Status_Asc" : (ViewBag.Sort1 == "Status_Asc" ? "Status_Desc" : "Status_Asc"), sort2 = @ViewBag.Sort2,  search1 = @ViewBag.Search1, search2 = @ViewBag.Search2 })</th>
                                <th scope="col" class="align-middle">ACTIONS</th>
                            </tr>

                        </thead>
                        <tbody>
                            @if (Model.InProgressNotes.Count() == 0)
                            {
                                <tr>
                                    <td colspan="5" class="text-center align-middle">No Record Found</td>
                                </tr>
                            }

                            else
                            {
                                foreach (var inprogressnote in Model.InProgressNotes)
                                {


                                    <tr>
                                        <td class="align-middle">@inprogressnote.CreatedDate.Value.ToString("dd-MM-yyyy")</td>
                                        <td class="align-middle">@inprogressnote.Title</td>
                                        <td class="align-middle">@inprogressnote.NoteCategories.Name</td>
                                        <td class="align-middle">@inprogressnote.ReferenceData.Value</td>
                                        <td class="align-middle">
                                            @if (inprogressnote.Status == 6)
                                            {
                                            <div class="row">
                                                <div class="col-6 col-sm-6 col-md-4 col-lg-3">
                                                    <a href="@Url.Action("EditNotes","SellNotes", new { id = inprogressnote.ID })"><img src="~/Content/Front/img/Dashboard/edit.png" alt="Edit"></a>
                                                </div>
                                                <div class="col-6 col-sm-6 col-md-4 col-lg-3">
                                                    <a><img src="~/Content/Front/img/Dashboard/delete.png" data-toggle="modal" data-target="#delete-@inprogressnote.ID" alt="Delete"></a>
                                                </div>
                                                
                                                <!--delete confirmation box-->

                                                <div class="modal fade in" id="delete-@inprogressnote.ID" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                             

                                                            </div>
                                                            <div class="modal-body">
                                                                Are you sure, you want to delete this note?
                                                            </div>
                                                            <div class="modal-footer">

                                                                <button type="submit" class="btn btn-primary" data-dismiss="modal" onclick="location.href='@Url.Action("DeleteDraft", "SellNotes", new { id = inprogressnote.ID })'">YES</button>
                                                                <button type="button" class="btn btn-primary" data-dismiss="modal" aria-label="Close">NO</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- delete Confirmation-Box END -->
                                            </div>
                                            }

                                            else
                                            {
                                                <div class="row text-center">
                                                    <div class="col-11 col-sm-11 col-md-9 col-lg-7">
                                                        <a href="@Url.Action("NoteDetail", "SearchNotes", new { id = @inprogressnote.ID })"><img src="~/Content/Front/img/Dashboard/eye.png" alt="View"></a>
                                                    </div>
                                                </div>

                                            }
                                        </td>

                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Dashboard Progress-->
<!--Pagination-->
<nav>
    <div class="container">
        <div class="row justify-content-center">


            @Html.PagedListPager(Model.InProgressNotes, page1 => Url.Action("Dashboard", new { page1, search1 = @ViewBag.Search1, sort1 = @ViewBag.Sort1, search2 = @ViewBag.Search2, sort2 = @ViewBag.Sort2 }), new PagedList.Mvc.PagedListRenderOptions
            {
               
                LinkToNextPageFormat = ">",
                LinkToPreviousPageFormat = "<",
                MaximumPageNumbersToDisplay = 5,
                DisplayEllipsesWhenNotShowingAllPageNumbers = false,
                DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                DisplayLinkToLastPage = PagedListDisplayMode.Never

            })
         </div>
        </div>

</nav>

<!--Pagination Ends -->
<!-- Dashboard Publish -->
<section id="publish-notes">
    <div class="container">
        @using (Html.BeginForm("Dashboard", "SellNotes", FormMethod.Get))
        {
            <div class="row">
                <div class="col-12 col-sm-12 col-md-4 col-lg-6">
                    <h3>Published Notes</h3>
                </div>
                <div class="col-12 col-sm-12 col-md-8 col-lg-6">
                    <div class="row justify-content-end">
                        <div class="hidepassword">
                            <img src="~/Content/Front/img/Dashboard/search.jpg" class="searchimage doup">
                            <input type="search" name="search2" value="@ViewBag.Search2" class="form-control search-bar exampleInputEmail1" placeholder="Search">
                        </div>
                        <div class="btn-merge">
                            <button type="submit" class="btn text-uppercase text-center" id="btn"><b>Search</b></button>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-12">
                <div class="grid-table table-responsive-xl">
                    <table class="table">
                        <thead>
                            <tr>


                                <th scope="col" class="align-middle">@Html.ActionLink("ADDED DATE", "Dashboard", new { sort2 = ViewBag.Sort2 == null ? "PublishedDate_Asc" : (ViewBag.Sort2 == "PublishedDate_Asc" ? "PublishedDate_Desc" : "PublishedDate_Asc"), sort1 = @ViewBag.Sort1, search1 = @ViewBag.Search1, search2 = @ViewBag.Search2 })</th>
                                <th scope="col" class="align-middle">@Html.ActionLink("TITLE", "Dashboard", new { sort2 = ViewBag.Sort2 == null ? "Title_Asc" : (ViewBag.Sort2 == "Title_Asc" ? "Title_Desc" : "Title_Asc"), sort1 = @ViewBag.Sort1, search1 = @ViewBag.Search1, search2 = @ViewBag.Search2 })</th>
                                <th scope="col" class="align-middle">@Html.ActionLink("CATEGORY", "Dashboard", new { sort2 = ViewBag.Sort2 == null ? "Category_Asc" : (ViewBag.Sort2 == "Category_Asc" ? "Category_Desc" : "Category_Asc"), sort1 = @ViewBag.Sort1, search1 = @ViewBag.Search1, search2 = @ViewBag.Search2 })</th>
                                <th scope="col" class="align-middle">@Html.ActionLink("SELL TYPE", "Dashboard", new { sort2 = ViewBag.Sort2 == null ? "IsPaid_Asc" : (ViewBag.Sort2 == "IsPaid_Asc" ? "IsPaid_Desc" : "IsPaid_Asc"), sort1 = @ViewBag.Sort1, search1 = @ViewBag.Search1, search2 = @ViewBag.Search2 })</th>
                                <th scope="col" class="align-middle">@Html.ActionLink("PRICE", "Dashboard", new { sort2 = ViewBag.Sort2 == null ? "SellingPrice_Asc" : (ViewBag.Sort2 == "SellingPrice_Asc" ? "SellingPrice_Desc" : "SellingPrice_Asc"), sort1 = @ViewBag.Sort1, search1 = @ViewBag.Search1, search2 = @ViewBag.Search2 })</th>
                                <th scope="col" class="align-middle">ACTIONS</th>

                            </tr>
                        </thead>
                        <tbody>


                            @if (Model.PublishedNotes.Count() == 0)
                            {
                                <tr>
                                    <td colspan="6" class="text-center align-middle">No Record Found</td>
                                </tr>
                            }
                            else
                            {
                                foreach (var publishednote in Model.PublishedNotes)
                                {
                                    <tr>
                                        <td class="align-middle">@publishednote.PublishedDate.Value.ToString("dd-MM-yyyy")</td>
                                        <td class="align-middle">@publishednote.Title</td>
                                        <td class="align-middle">@publishednote.NoteCategories.Name</td>
                                        @if (publishednote.IsPaid)
                                        {
                                            <td class="align-middle">Paid</td>
                                            <td class="align-middle">$@publishednote.SellingPrice</td>
                                        }
                                        else
                                        {
                                            <td class="align-middle">Free</td>
                                            <td class="align-middle">$0</td>
                                        }
                                        <td class="align-middle">

                                            <div class="row text-center">
                                                <div class="col-11 col-sm-11 col-md-9 col-lg-7">
                                                    <a href="@Url.Action("NoteDetail", "SearchNotes", new { id = @publishednote.ID })"><img src="~/Content/Front/img/Dashboard/eye.png" alt="View"></a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>

                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>
</section>
@*Dashboard Publish Ends*@
<!-- Pagination ends -->
