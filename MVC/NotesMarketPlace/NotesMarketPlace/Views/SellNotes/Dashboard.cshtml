    <div class="container">
        <div class="row justify-content-center">

            @Html.PagedListPager(Model.PublishedNotes, page2 => Url.Action("Dashboard", new { page2, search1 = @ViewBag.Search1, sort1 = @ViewBag.Sort1, search2 = @ViewBag.Search2, sort2 = @ViewBag.Sort2 }), new PagedList.Mvc.PagedListRenderOptions
            {

                LinkToNextPageFormat = ">",
